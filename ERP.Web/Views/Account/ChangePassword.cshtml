
@model ERP.Web.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
}



<div class="form">
    <div class="card">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary"> @ViewBag.Title</h6>
        </div>

        <div class="card-body">
            @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return JQueryAjaxPost(this);", data_restUrl = Url.Action("ChangePassword", "Account"), @class = "form-horizontal", id = "Account-form" }))//data-resetUrl
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model=>model.UserId)

                <div class="form-row">
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.OldPassword, new { @class = "form-control-label required" })
                        @Html.TextBoxFor(model => model.OldPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.NewPassword, new { @class = "form-control-label required" })
                        @Html.TextBoxFor(model => model.NewPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.ConfirmPassword, new { @class = "form-control-label required" })
                        @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-10">
                        <button class="btn btn-success btn-lg" type="submit" id="btn-submit">Save</button>
                        <button class="btn btn-danger btn-lg" type="button" id="btn-clear">Clear</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<script>
    $('#btn-clear').on('click', function () {
        GlobalFunctions.ClearForm($(this))
    });

</script>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


