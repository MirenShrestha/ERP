@model IEnumerable<ERP.Core.Models.UserManagement.User>


<div class="col-md-12">
    <div class="card">

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">UserDetails</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead class="thead-dark">
                            <tr>
                                <th>SN</th>
                                <th>User</th>
                                <th>FullName</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                       
                        @if (Model != null && Model.Any())
                        {
                            int count = 1;
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td width="4%">@count</td>
                                        <td>@item.UserName</td>
                                        <td>@item.FullName</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Email</td>
                                        <td width="10%">
                                            <a title="Edit" onclick='return Action("@Url.Action("Edit","Account")","edit","@item.Id")' href='#' id='btn_@item.Id' style="color:#4af54a"><i class="fas fa-edit" style="font-size:20px"></i></a>
                                            <a title="Delete" onclick='return Action("@Url.Action("Delete","Account")","delete","@item.Id")' href='#' id='btn_@item.Id' style=" color: #FF0000;"><i class="far fa-trash-alt" style="font-size:20px"></i></a>
                                            <a title="View" class="fa fa-people-carry" style="font-size:20px" onclick='return PopupModal("@Url.Action("ChangePassword", "Account")","small","Change Password","@item.Id")' href='#' id='btn_@item.Id'></a>

                                        </td>
                                    </tr>
                                    count++;
                                }
                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>


</div>
