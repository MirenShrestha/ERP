<style>
    .full {
        float: right;
        position: absolute;
        right: 58px;
        padding: 7px;
    }
    .full-screen{
        max-width: 100% !important;
        margin: 5px;
        padding: 0;
    }
</style>

<script>
    $(".full").click(function () {
        if ($("#isform-modal").hasClass("full-screen")) {
            

            $("#isform-modal").removeClass("full-screen");
            $("#icon-window").removeClass();
            $("#icon-window").addClass("fa fa-window-maximize");
        }
        else
        {
            $("#isform-modal").addClass("full-screen");
      
            $("#icon-window").removeClass();
            $("#icon-window").addClass("fa fa-window-restore");

        }
  
    
    });
</script>