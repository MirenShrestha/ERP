@model ERP.Core.Models.GeneralManagement.AspNetUserRoles

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card shadow mb-4">

                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Assign Role</h6>
                    </div>

                    @using (Html.BeginForm("Edit", "RoleManagement", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return JQueryAjaxPost(this);", data_restUrl = Url.Action("Edit", "RoleManagement"), @class = "form-horizontal", id = "RoleManagement-form" }))//data-resetUrl
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.UserId);
                        <div class="card-body card-block">
                            <div class="form-row">

                                <div class="form-group col-md-3">
                                    @Html.LabelFor(model => model.UserId, "User", new { @class = "form-control-label required" })
                                    @Html.DropDownListFor(model => model.UserId, (SelectList)ViewBag.Users, "--Select--", new { @class = "form-control", @disabled = "disabled" })

                                    @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group col-md-3">
                                    @Html.LabelFor(model => model.RoleId, "Roles", new { @class = "form-control-label required" })

                                    @Html.DropDownListFor(model => model.RoleId, (SelectList)ViewBag.Roles, "--Select--", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger" })
                                </div>

                            </div>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-success btn-lg" type="submit" id="btn-Update">Update</button>
                            <button class="btn btn-danger btn-lg" type="button" id="btn-Cancel">Cancel</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#btn-cancel').on('click', function () {
        CancelUpdate("@Url.Action("Create", "Organisation")","@Url.Action("List", "Organisation")");
    });
</script>
