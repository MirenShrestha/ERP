

@model IEnumerable<ERP.Core.Models.GeneralManagement.AspNetUserRolesVM>

<div class="col-md-12">
    <div class="card">

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">User's Role Info</h6>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead class="thead-dark">
                            <tr>
                                <th>SN</th>
                                <th>User Name</th>
                                <th>Role</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        
                        @if (Model != null && Model.Any())
                        {
                            int count = 1;
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td width="5%">@count</td>
                                        <td>@item.User</td>
                                        <td>@item.Role</td>
                                      
                                        <td width="10%">
                                            <a title="Edit" onclick='return Action("@Url.Action("Edit","RoleManagement")","edit","@item.UserId")' href='#' id='btn_@item.UserId' style="color:#4af54a"><i class="fas fa-edit" style="font-size:20px"></i></a>
                                            <a title="Delete" onclick='return Action("@Url.Action("Delete","RoleManagement")","delete","@item.UserId")' href='#' id='btn_@item.UserId' style=" color: #FF0000;"><i class="far fa-trash-alt" style="font-size:20px"></i></a>
                                            @*<i class="far fa-trash-alt" style="font-size: 20px;"></i>*@
                                        </td>
                                    </tr>
                                    count++;
                                }
                            </tbody>
                        }
                        else
                        {
                            <tr>No data to show</tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>


</div>


