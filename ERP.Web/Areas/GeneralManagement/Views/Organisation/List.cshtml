
@model IEnumerable<ERP.Core.Models.GeneralManagement.Organisation>

<div class="col-md-12">
    <div class="card">

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Company Info</h6>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead class="thead-dark">
                            <tr>
                                <th>SN</th>
                                <th>FullName</th>
                                <th>Address</th>
                                <th>Contact No</th>
                                <th>VAT/PAN</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        @*<tfoot>
                            <tr>
                                <th>SN</th>
                                <th>FullName</th>
                                <th>Address</th>
                                <th>Contact No</th>
                                <th>VAT/PAN</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>*@
                        @if (Model != null && Model.Any())
                        {
                            int count = 1;
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Name</td>
                                        <td>@item.Address</td>
                                        <td>@item.ContactNo</td>
                                        <td>@item.VatPan</td>
                                        <td width="10%">
                                            <a title="Edit" onclick='return Action("@Url.Action("Edit","Organisation")","edit","@item.Id")' href='#' id='btn_@item.Id' style="color:#4af54a"><i class="fas fa-edit" style="font-size:20px"></i></a>
                                            <a title="Delete" onclick='return Action("@Url.Action("Delete","Organisation")","delete","@item.Id")' href='#' id='btn_@item.Id' style=" color: #FF0000;"><i class="far fa-trash-alt"style="font-size:20px"></i></a>
                                            @*<i class="far fa-trash-alt" style="font-size: 20px;"></i>*@
                                        </td>
                                    </tr>
                                    count++;
                                }
                            </tbody>
                        }
                        else
                        {
                            <tr>No data to show</tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>


</div>


