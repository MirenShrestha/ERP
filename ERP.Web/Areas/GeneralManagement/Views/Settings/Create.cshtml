
@model ERP.Core.Models.GeneralManagement.Settings

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card shadow mb-4">

                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Add Settings</h6>
                    </div>

                    @using (Html.BeginForm("Create", "Settings", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return JQueryAjaxPost(this);", data_restUrl = Url.Action("Create", "Settings"), @class = "form-horizontal", id = "Settings-form" }))//data-resetUrl
                    {
                        @Html.AntiForgeryToken()

                        <div class="card-body card-block">
                            <div class="form-row">

                                <div class="form-group col-md-3">
                                    @Html.LabelFor(model => model.TaxType,"Tax Type", new { @class = "form-control-label" })

                                    @Html.TextBoxFor(model => model.TaxType, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.TaxType, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group col-md-3">
                                    @Html.LabelFor(model => model.TaxPercentage,"Tax Percentage", new { @class = "form-control-label" })

                                    @Html.TextBoxFor(model => model.TaxPercentage, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.TaxPercentage, "", new { @class = "text-danger" })
                                </div> 
                            </div>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-success btn-lg" type="submit" id="btn-submit">Save</button>
                            <button class="btn btn-danger btn-lg" type="button" id="btn-clear">Clear</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#btn-clear').on('click', function () {
        GlobalFunctions.ClearForm($(this))
    });
</script>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>