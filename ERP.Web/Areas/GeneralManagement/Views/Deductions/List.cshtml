
@model IEnumerable<ERP.Core.Models.GeneralManagement.Deductions>

<div class="col-md-12">
    <div class="card">

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Deductions Info</h6>
            </div>

            <div class="card-body">
                <div class="table-responsive">

                    <table class="table" id="dataTable" width="100%" cellspacing="0">
                        <thead class="thead-dark">

                            <tr>
                                <th>SN</th>
                                <th>Name</th>
                                <th>IsActive</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        @if (Model != null && Model.Any())
                        {
                            int count = 1;
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td width="5%">@count</td>
                                        <td>@item.Name</td>
                                        <td width="10%">@(item.IsActive?"Yes":"No")</td>
                                        <td width="10%">
                                            <a title="Edit" onclick='return Action("@Url.Action("Edit","Deductions")","edit","@item.Id")' href='#' id='btn_@item.Id' style="color:#4af54a"><i class="fas fa-edit" style="font-size:20px"></i></a>
                                            <a title="Delete" onclick='return Action("@Url.Action("Delete","Deductions")","delete","@item.Id")' href='#' id='btn_@item.Id' style=" color: #FF0000;"><i class="far fa-trash-alt" style="font-size:20px"></i></a>
                                        </td>
                                    </tr>
                                    count++;
                                }
                            </tbody>
                        }
                        else
                        {
                            <tbody>
                                <tr>
                                    No data to show
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>






