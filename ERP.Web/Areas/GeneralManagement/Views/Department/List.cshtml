
@model IEnumerable<ERP.Core.Models.GeneralManagement.Department>

<div class="col-md-12">
    <div class="card">

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Department Info</h6>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead class="thead-dark">
                            <tr>
                                <th style="width:5%">SN</th>
                                <th>Code</th>
                                <th>Name</th>
                                <th  width="10%">Action</th>
                            </tr>
                        </thead>

                        @if (Model != null && Model.Any())
                        {
                            int count = 1;
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td >@count</td>
                                        <td>@item.Code</td>
                                        <td>@item.Name</td>
                                        <td>
                                            <a title="Edit" onclick='return Action("@Url.Action("Edit","Department")","edit","@item.Id")' href='#' id='btn_@item.Id' style="color:#4af54a"><i class="fas fa-edit" style="font-size:20px"></i></a>
                                            <a title="Delete" onclick='return Action("@Url.Action("Delete","Department")","delete","@item.Id")' href='#' id='btn_@item.Id' style=" color: #FF0000;"><i class="far fa-trash-alt" style="font-size:20px"></i></a>
                                        </td>
                                    </tr>
                                    count++;
                                }
                            </tbody>
                        }
                        else
                        {
                            <tbody>
                                <tr>
                                    No data to show
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


