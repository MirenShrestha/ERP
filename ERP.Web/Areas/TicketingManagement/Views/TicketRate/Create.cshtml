
@model ERP.Core.Models.TicketingManagement.TicketRate

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card shadow mb-4">

                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Create Ticket Rate</h6>
                    </div>

                    @using (Html.BeginForm("Create", "TicketRate", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return JQueryAjaxPost(this);", data_restUrl = Url.Action("Create", "TicketRate"), @class = "form-horizontal", id = "TicketRate-form" }))//data-resetUrl
                    {
                        @Html.AntiForgeryToken()

                        <div class="card-body card-block">
                            <div class="form-row">

                                <div class="form-group col-md-3">
                                    @Html.LabelFor(model => model.Code, new {  @class = "form-control-label required" })

                                    @Html.TextBoxFor(model => model.Code, new { @Value = (Model.Code > 0 ? Model.Code.ToString() : string.Empty), @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group col-md-3">
                                    @Html.LabelFor(model => model.CategoryId, "Category", new { @class = "form-control-label required" })

                                    @Html.DropDownListFor(model => model.CategoryId, (SelectList)ViewBag.Category, "--Select--", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group col-md-3">
                                    @Html.LabelFor(model => model.Name, "Name", new { @class = "form-control-label required" })

                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group col-md-3">
                                    @Html.LabelFor(model => model.TypeId, "Type", new { @class = "form-control-label required" })

                                    @Html.DropDownListFor(model => model.TypeId, (SelectList)ViewBag.Type, "--Select--", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.TypeId, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group col-md-3">
                                    @Html.LabelFor(model => model.PackageId, "Package Name", new { @class = "form-control-label required" })

                                    @Html.DropDownListFor(model => model.PackageId, (SelectList)ViewBag.Package, "--Select--", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.PackageId, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group col-md-3">
                                    @Html.LabelFor(model => model.Currency, new { @class = "form-control-label required" })
                                    @Html.DropDownListFor(model => model.Currency, new List<SelectListItem>
                                                                                                         {
                                                                                                               new SelectListItem {Text="NRS",Value="NRS" },
                                                                                                               new SelectListItem {Text="USD",Value="USD" },
                                                                                                          }, "--Select--", new { @class = "form-control", id = "Currency" })

                                    @Html.ValidationMessageFor(model => model.Currency, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group col-md-3">
                                    @Html.LabelFor(model => model.BaseRate, "Base Rate", new { @class = "form-control-label required" })

                                    @Html.TextBoxFor(model => model.BaseRate, new { @Value = (Model.BaseRate > 0 ? Model.BaseRate.ToString() : string.Empty), @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.BaseRate, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-md-3">
                                    @Html.LabelFor(model => model.LocalTax, "Local Tax", new { @class = "form-control-label required" })

                                    @Html.TextBoxFor(model => model.LocalTax, new { @Value = (Model.LocalTax > 0 ? Model.LocalTax.ToString() : string.Empty), @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.LocalTax, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-md-3">
                                    @Html.LabelFor(model => model.VAT, "VAT", new { @class = "form-control-label required" })

                                    @Html.TextBoxFor(model => model.VAT, new { @Value = (Model.VAT > 0 ? Model.VAT.ToString() : string.Empty), @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.VAT, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group col-md-3">
                                    @Html.LabelFor(model => model.Total, new { @class = "form-control-label required" })

                                    @Html.TextBoxFor(model => model.Total, new { @Value = (Model.Total > 0 ? Model.Total.ToString() : string.Empty), @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Total, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group col-md-3">
                                    @Html.LabelFor(model => model.RoundOff, "Round Off", new { @class = "form-control-label required" })

                                    @Html.TextBoxFor(model => model.RoundOff, new { @Value = (Model.RoundOff > 0 ? Model.RoundOff.ToString() : string.Empty), @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.RoundOff, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group col-md-3">
                                    @Html.LabelFor(model => model.GrandTotal, "Grand Total", new { @class = "form-control-label required" })

                                    @Html.TextBoxFor(model => model.GrandTotal, new { @Value = (Model.GrandTotal > 0 ? Model.GrandTotal.ToString() : string.Empty), @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.GrandTotal, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <div class="col col-md-1">
                                        @Html.LabelFor(model => model.IsActive, new { @class = "form-control-label" })
                                    </div>
                                    <div class="col-12 col-md-9">
                                        @Html.CheckBoxFor(model => model.IsActive, new { @class = "form-control" })
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-success btn-lg" type="submit" id="btn-submit">Save</button>
                            <button class="btn btn-danger btn-lg" type="button" id="btn-clear">Clear</button>
                        </div>
                     }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#btn-clear').on('click', function () {
        GlobalFunctions.ClearForm($(this))
    });

</script>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


